<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="BaseMakeableGun">
    <defName>SNK_SCAR_L_Vanilla</defName>
    <label>FN SCAR-L</label>
    <description>Assault rifle with a polymer body. Polymer construction makes the rifle lighter without losing much reliability.</description>
    <graphicData>
      <texPath>Scar_L</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
	<WorkToMake>18000</WorkToMake>
      <Mass>3.49</Mass>
	  <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.62</AccuracyLong>
      <RangedWeapon_Cooldown>1.62</RangedWeapon_Cooldown>

    </statBases>
	<costList>
      <Steel>35</Steel>
	  <Chemfuel>65</Chemfuel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
	<researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_AssaultRifle</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>35.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>MTB_SCARShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	

	
	<weaponTags>
	  <li>IndustrialGunAdvanced</li> 
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>


</Defs>