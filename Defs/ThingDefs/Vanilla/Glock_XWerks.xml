<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="BaseMakeableGun">
    <defName>MTB_Glock_XWerks_Vanilla</defName>
    <label>Glock 19</label>
    <description>Small caliber firearm of ancient origin commonly used along civilians and law enforcement on the midworlds. This one has a custom color pattern.</description>
    <graphicData>
      <texPath>Glock_XWerks</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
	<WorkToMake>8000</WorkToMake>
      <MarketValue>350</MarketValue>
      <Mass>0.6</Mass>
	  <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>

    </statBases>
	<costList>
      <Steel>15</Steel>
	  <Chemfuel>15</Chemfuel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
	<researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Autopistol</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>25.9</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	

	
	<weaponTags>
	<li>SimpleGun</li>
	</weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>

  </ThingDef>


</Defs>