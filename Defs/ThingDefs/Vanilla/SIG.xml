<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="BaseMakeableGun">
    <defName>SNK_SIG_Vanilla</defName>
    <label>SIG SG 550</label>
    <description>Assault rifle with polymer ornaments and a folding stock. While somewhat expensive and rare, this rifle is pretty accurate and reliable.</description>
    <graphicData>
      <texPath>SIG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
	<WorkToMake>22000</WorkToMake>
      <Mass>4.1</Mass>
	  <AccuracyTouch>0.48</AccuracyTouch>
      <AccuracyShort>0.78</AccuracyShort>
      <AccuracyMedium>0.72</AccuracyMedium>
      <AccuracyLong>0.68</AccuracyLong>
      <RangedWeapon_Cooldown>1.68</RangedWeapon_Cooldown>

    </statBases>
	<costList>
      <Steel>80</Steel>
	  <Chemfuel>20</Chemfuel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
	<researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_AssaultRifle</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>35.9</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>MTB_SIGShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	

	<weaponTags>
	  <li>IndustrialGunAdvanced</li> 
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>

  </ThingDef>


</Defs>