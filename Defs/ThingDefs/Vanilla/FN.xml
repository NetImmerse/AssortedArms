<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="BaseMakeableGun">
    <defName>SNK_FN_Vanilla</defName>
    <label>FN F2000</label>
    <description>Assault rifle with an integrated scope. Bullpup composition and polymer body makes it light and compact.</description>
    <graphicData>
      <texPath>F2000</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
	<WorkToMake>22000</WorkToMake>
      <Mass>3.6</Mass>
	  <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>1.60</RangedWeapon_Cooldown>

    </statBases>
	<costList>
      <Steel>60</Steel>
	  <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
	<researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_AssaultRifle</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>35.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>MTB_SIGShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	
	
	<weaponTags>
	  <li>IndustrialGunAdvanced</li> 
    </weaponTags>
   <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>


</Defs>